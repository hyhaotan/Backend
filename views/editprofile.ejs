<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f4f4f4;
      }
      nav.navbar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background-color: #333;
        z-index: 1000;
      }
      nav.navbar .navbar-brand,
      nav.navbar .nav-link {
        color: white;
      }
      nav.navbar .nav-link:hover {
        color: #ddd;
      }
      .profile-container {
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 400px;
        margin-top: 80px;
      }
      .profile-container h2 {
        margin-bottom: 20px;
        text-align: center;
      }
      img#avatar {
        border-radius: 50%;
        margin: 15px 0;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#">DriveX</a>
        <button
          class="navbar-toggler d-lg-none"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#collapsibleNavId"
          aria-controls="collapsibleNavId"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
          <ul class="navbar-nav ms-auto mt-2 mt-lg-0 fs-6">
            <li class="nav-item">
              <a class="nav-link active" href="home.html">HOME</a>
            </li>
            
            <li class="nav-item dropdown" style="display: none">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="avatarDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <div id="avatar" class="avatar"></div>
              </a>
              <ul
                class="dropdown-menu dropdown-menu-end"
                aria-labelledby="avatarDropdown"
                style="
                  position: absolute;
                  top: 50px;
                  left: 0;
                  transform: translateX(-25%);
                "
              >
                <li>
                  <a class="dropdown-item" href="/profile">Profile</a>
                </li>
                <li>
                  <hr class="dropdown-divider" />
                </li>
                <li>
                  <button id="logoutBtn" class="dropdown-item">Log Out</button>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="profile-container">
      <h2>Thông tin người dùng</h2>
      <img
        id="avatar"
        src="<%= user.avatar || '/assets/default.jpg' %>"
        alt="User Avatar"
        width="100"
      />
      <button
        class="btn btn-primary w-100 my-2"
        data-bs-toggle="modal"
        data-bs-target="#editNameModal"
      >
        Thay đổi Tên
      </button>
      <button
        class="btn btn-primary w-100 my-2"
        data-bs-toggle="modal"
        data-bs-target="#editEmailModal"
      >
        Thay đổi Email
      </button>
      <button
        class="btn btn-primary w-100 my-2"
        data-bs-toggle="modal"
        data-bs-target="#editAgeModal"
      >
        Thay đổi Tuổi
      </button>
      <button
        class="btn btn-primary w-100 my-2"
        data-bs-toggle="modal"
        data-bs-target="#editPasswordModal"
      >
        Đổi mật khẩu
      </button>
    </div>

    <!-- Modal for Name -->
    <div
      class="modal fade"
      id="editNameModal"
      tabindex="-1"
      aria-labelledby="editNameModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editNameModalLabel">Thay đổi Tên</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form onsubmit="changeName()">
              <label for="name">Tên:</label>
              <input
                type="text"
                id="name"
                name="name"
                class="form-control"
                value="<%= user.username %>"
              />
              <button type="submit" class="btn btn-primary mt-3">Lưu</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal for Email -->
    <div
      class="modal fade"
      id="editEmailModal"
      tabindex="-1"
      aria-labelledby="editEmailModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editEmailModalLabel">Thay đổi Email</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form onsubmit="changeEmail()">
              <label for="email">Email:</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control"
                value="<%= user.email %>"
              />
              <button type="submit" class="btn btn-primary mt-3">Lưu</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal for Age -->
    <div
      class="modal fade"
      id="editAgeModal"
      tabindex="-1"
      aria-labelledby="editAgeModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editAgeModalLabel">Thay đổi Tuổi</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form onsubmit="changeAge()">
              <label for="age">Tuổi:</label>
              <input
                type="number"
                id="age"
                name="age"
                class="form-control"
                value="<%= user.age %>"
              />
              <button type="submit" class="btn btn-primary mt-3">Lưu</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal for Password -->
    <div
      class="modal fade"
      id="editPasswordModal"
      tabindex="-1"
      aria-labelledby="editPasswordModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editPasswordModalLabel">
              Đổi mật khẩu
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form onsubmit="changePassword()" id="changePasswordForm">
              <label for="oldPassword">Mật khẩu cũ:</label>
              <input
                type="password"
                id="oldPassword"
                name="oldPassword"
                class="form-control"
                placeholder="Nhập mật khẩu cũ"
                required
              />
              <label for="newPassword" class="mt-3">Mật khẩu mới:</label>
              <input
                type="password"
                id="newPassword"
                name="newPassword"
                class="form-control"
                placeholder="Nhập mật khẩu mới"
                required
              />
              <button type="submit" class="btn btn-primary mt-3">Lưu</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      async function changeName() {
        event.preventDefault();
        const email = "<%= user.email %>"; // Lấy email từ session (truyền vào EJS)
        const name = document.getElementById("name").value; // Lấy tên mới từ input
        console.log("Email:", email);
        console.log("Name:", name);
        try {
          const response = await fetch("/api/update-username", {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email, username: name }),
          });
          console.log(response);

          const result = await response.json();

          if (response.ok) {
            alert("Cập nhật tên thành công.");
            window.location.reload();
          } else {
            alert(`Lỗi: ${result.message}`);
          }
        } catch (error) {
          console.error("Fetch Error:", error);
          alert("Đã xảy ra lỗi. Vui lòng thử lại.");
        }
      }
      async function changeEmail() {
        event.preventDefault();
        const email = "<%= user.email %>"; // Lấy email từ session (truyền vào EJS)
        const newEmail = document.getElementById("email").value; // Lấy email mới từ input
        console.log("Email cũ:", email);
        console.log("Email mới:", newEmail);

        try {
          const response = await fetch("/api/update-email", {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email, newEmail }), // Gửi email cũ và email mới
          });
          const result = await response.json();
          console.log(response);
          if (response.ok) {
            alert("Cập nhật email thành công.");
            window.location.reload();
          } else {
            alert(`Lỗi: ${result.message}`);
          }
        } catch (error) {
          console.error("Fetch Error:", error);
          alert("Đã xảy ra lỗi. Vui lòng thử lại.");
        }
      }
      async function changeAge() {
        event.preventDefault();
        const email = "<%= user.email %>";
        const age = document.getElementById("age").value;
        console.log("Email:", email);
        console.log("Age mới:", age);

        try {
          const response = await fetch("/api/update-age", {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email, age }),
          });
          const result = await response.json();

          if (response.ok) {
            alert("Cập nhật tuổi thành công.");
            window.location.reload();
          } else {
            alert(`Lỗi: ${result.message}`);
          }
        } catch (error) {
          console.error("Fetch Error:", error);
          alert("Đã xảy ra lỗi. Vui lòng thử lại.");
        }
      }
      // Cập nhật mật khẩu
      async function changePassword() {
        event.preventDefault();
        const email = "<%= user.email %>";
        const oldPassword = document.getElementById("oldPassword").value;
        const newPassword = document.getElementById("newPassword").value;
        console.log("Email:", email);
        console.log("Mật khẩu cũ:", oldPassword);
        console.log("Mật khẩu mới:", newPassword);

        try {
          const response = await fetch("/api/update-password", {
            method: "PUT",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ email, oldPassword, newPassword }),
          });
          const result = await response.json();
          console.log(response)
          console.log(result)
          if (response.ok) {
            alert("Cập nhật mật khẩu thành công.");
            window.location.reload();
            
          } else {
            alert(`Lỗi: ${result.message}`);
          }
        } catch (error) {
          console.error("Fetch Error:", error);
          alert("Đã xảy ra lỗi. Vui lòng thử lại.");
        }
      }
    </script>
  </body>
</html>
